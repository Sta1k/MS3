{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "lib": [
        "es6",
        "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "target": "es2017",
      "strictNullChecks": false,
      "strict": true,
      "typeRoots": [
        "node_modules/@types",
        "types"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "node_modules"
    ]
  }